{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console"
        ],
        "MinimumLevel": "Debug",
        "Enrich": [
            "FromLogContext",
            "WithExceptionDetails",
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Debug",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u3} {ThreadId:000} {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    },

    "DockerContainerMonitoring": {
        "RollingCsvFiles": {
            "RollingFileInterval": "1:00:00:00",
            "RollingFileTimePlaceholder": "{Date}",
            "RollingFileTimeFormat": "yyyy.MM.dd",
            "RollingFileBufferSize": 4096,
            "RollingFileEncoding": "UTF-8"
        },
        "Docker": {
            "Uri": "tcp://localhost:2375"
        },
        "Containers": {
            "tap.bitmex.recorder.xbtusd": "./Data/Stats/tap.bitmex.recorder.xbtusd_{Date}.csv",
            "tap.bitmex.recorder.ethusd": "./Data/Stats/tap.bitmex.recorder.ethusd_{Date}.csv",
            "tap.bitmex.recorder.xrpusd": "./Data/Stats/tap.bitmex.recorder.xrpusd_{Date}.csv",
            "tap.tools.file-monitor": "./Data/Stats/tap.tools.file-monitor_{Date}.csv"
        }
    }
}
