{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console"
        ],
        "MinimumLevel": "Debug",
        "Enrich": [
            "FromLogContext",
            "WithExceptionDetails",
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Debug",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u3} {ThreadId:000} {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    },

    "DockerContainerMonitoring": {
        "Docker": {
            "Uri": "tcp://localhost:2375"
        },
        "Containers": {
            "weather.api": "./Data/Stats/weather.api.csv",
            "weather.ui": "./Data/Stats/weather.api.csv"
        }
    }
}
